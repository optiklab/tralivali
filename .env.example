# MongoDB Configuration
# Root username for MongoDB admin
MONGO_ROOT_USERNAME=admin
# Root password for MongoDB admin
MONGO_ROOT_PASSWORD=password
# Database name for TelegramLite
MONGO_DATABASE=telegramlite
# MongoDB connection string (used by application)
MONGODB_CONNECTION_STRING=mongodb://admin:password@localhost:27017/telegramlite?authSource=admin

# RabbitMQ Configuration
# Default username for RabbitMQ
RABBITMQ_USER=admin
# Default password for RabbitMQ
RABBITMQ_PASSWORD=password
# RabbitMQ connection string (used by application)
RABBITMQ_CONNECTION_STRING=amqp://admin:password@localhost:5672

# Redis Configuration
# Password for Redis
REDIS_PASSWORD=password
# Redis connection string (used by application)
REDIS_CONNECTION_STRING=localhost:6379,password=password

# JWT Configuration
# Private key for JWT signing (RS256). Generate with: openssl genrsa -out private_key.pem 2048
JWT_PRIVATE_KEY=
# Public key for JWT verification. Generate with: openssl rsa -in private_key.pem -pubout -out public_key.pem
JWT_PUBLIC_KEY=
# JWT issuer
JWT_ISSUER=TelegramLite
# JWT audience
JWT_AUDIENCE=TelegramLite.Api
# JWT expiry in days
JWT_EXPIRY_DAYS=7

# Azure Communication Services
# Connection string for Azure Communication Services Email
AZURE_COMMUNICATION_CONNECTION_STRING=
# Sender email address
AZURE_COMMUNICATION_SENDER_EMAIL=noreply@yourdomain.com

# Azure Blob Storage
# Connection string for Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=
# Container name for file uploads
AZURE_STORAGE_FILES_CONTAINER=files
# Container name for archives
AZURE_STORAGE_ARCHIVES_CONTAINER=archives
# Container name for backups
AZURE_STORAGE_BACKUPS_CONTAINER=backups

# Message Retention Configuration
# Number of days to retain messages before archival (default: 365)
MESSAGE_RETENTION_DAYS=365
# Whether to delete messages after archival (default: true)
MESSAGE_RETENTION_DELETE_AFTER_ARCHIVE=true

# Backup Configuration
# Number of days to retain backups (default: 30)
BACKUP_RETENTION_DAYS=30

# API Configuration
# API base URL
API_BASE_URL=http://localhost:5000
# SignalR Hub URL
SIGNALR_HUB_URL=http://localhost:5000/chathub

# Application Settings
# Environment (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Development
# HTTPS port
ASPNETCORE_HTTPS_PORT=5001
# HTTP port
ASPNETCORE_HTTP_PORT=5000

# Notification Configuration
# Notification provider (None, Firebase, etc.)
NOTIFICATIONS_PROVIDER=None
