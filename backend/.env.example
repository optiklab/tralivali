# Backend Environment Variables Template
# These can be set in Azure App Service Configuration

# MongoDB
MongoDb__ConnectionString=mongodb://localhost:27017
MongoDb__DatabaseName=tralivali

# RabbitMQ
RabbitMq__HostName=localhost
RabbitMq__Port=5672
RabbitMq__UserName=guest
RabbitMq__Password=guest
RabbitMq__VirtualHost=/

# JWT Configuration
Jwt__SecretKey=your-secret-key-at-least-32-characters-long-change-in-production
Jwt__Issuer=tralivali
Jwt__Audience=tralivali-users
Jwt__ExpirationMinutes=1440

# Azure Communication Services (Optional)
AzureCommunication__ConnectionString=
AzureCommunication__SenderEmail=noreply@tralivali.com
